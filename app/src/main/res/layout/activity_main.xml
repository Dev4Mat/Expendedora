<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expendora\nProyecto final de Automatas"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:gravity="center"
            android:padding="4dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gomitaBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/gomiita"/>

            <ImageView
                android:id="@+id/refrescoBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@drawable/refresco"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/galletaBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@drawable/galleta"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@drawable/cancel"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/exp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="4dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/inicioBtn"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/inicio_off"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total : "
                android:textSize="22dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/totalTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0$"
                android:textColor="@android:color/black"
                android:textSize="22dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="25dp">

                <ImageView
                    android:id="@+id/oneBtn"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:src="@drawable/one"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/twoBtn"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:src="@drawable/two"
                    android:layout_weight="1"
                    android:paddingStart="4dp"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/fiveBtn"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:src="@drawable/five"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/tenBtn"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ten"
                    android:paddingStart="4dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cambio: "
                android:textSize="22dp"
                android:layout_marginTop="25dp"/>

            <TextView
                android:id="@+id/cambioTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---"
                android:textColor="@android:color/black"
                android:textSize="22dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>